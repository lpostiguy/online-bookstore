generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  bookId   Int      @id @default(autoincrement())
  title    String
  genre    String
  author   String
  loans    Loan[]
  orders   Order[]
}

model Member {
  memberId   Int      @id @default(autoincrement())
  name       String
  street     String
  streetNumber String // Was 'no'
  city       String
  zipCode    String   // Was 'cPost'
  loans      Loan[]
  orders     Order[]
}

model Loan {
  loanId    Int       @id @default(autoincrement())
  bookId    Int
  memberId  Int
  loanDate  DateTime  // Was 'dateEmprunt'
  dueDate   DateTime? // Was 'dateRetour'

  book      Book      @relation(fields: [bookId], references: [bookId])
  member    Member    @relation(fields: [memberId], references: [memberId])

  @@index([bookId],   name: "idx_loan_book")
  @@index([memberId], name: "idx_loan_member")
}

model Order {
  orderId    Int      @id @default(autoincrement())
  bookId     Int
  memberId   Int
  orderDate  DateTime // Was 'dateCommande'
  status     String   // Was 'etatCommande'

  book       Book     @relation(fields: [bookId], references: [bookId])
  member     Member   @relation(fields: [memberId], references: [memberId])

  @@index([bookId],   name: "idx_order_book")
  @@index([memberId], name: "idx_order_member")
}
